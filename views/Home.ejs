    height: 300px;
  }

  .footer {
    padding: 30px 20px;
    margin-top: 50px;
  }

  .footer .ft1 {
    flex-direction: column;
    align-items: flex-start;
    text-align: left;
  }

  .footer .ft2 {
    flex-direction: column;
    gap: 20px;
  }
}

