}

.footer .ft2 .ft21 li:hover {
  color:rgb(162, 66, 246);
}

.footer .ft2 .ft21 h3 {
  font-size: 18px;
  margin-bottom: 10px;
  color: #222;
}

/* Responsive */
@media (max-width: 768px) {
